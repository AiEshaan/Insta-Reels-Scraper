# Flask Configuration
FLASK_SECRET_KEY=your-random-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True
API_KEY=reel-scraper-2024-secret

# Database Configuration
DATABASE_URL=sqlite:///instagram_agent.db

# Application Settings
OUTPUT_DIR=output
MAX_RETRIES=3
RETRY_DELAY=5
SCROLL_PAUSE=2.5

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=1800

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================

# OpenAI Configuration (Required for LLM functionality)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Alternative LLM Providers (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Web Search APIs (At least one recommended)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CSE_ID=your-google-custom-search-engine-id
BING_API_KEY=your-bing-search-api-key
SERPAPI_KEY=your-serpapi-key-here

# Social Media APIs (Optional - for enhanced features)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# Vector Store Configuration
VECTORSTORE_PATH=data/vectorstore
VECTORSTORE_COLLECTION=instagram_reels

# Memory System Configuration
MEMORY_DB_PATH=data/agent_memory.db
MAX_MEMORIES=10000

# Content Analysis Thresholds
VIRAL_THRESHOLD=0.7
ENGAGEMENT_THRESHOLD=0.6

# Autonomous Actions Configuration
MAX_DAILY_ACTIONS=100
CONFIDENCE_THRESHOLD=0.7
ENABLE_FILTERING=true
ENABLE_CATEGORIZATION=true
ENABLE_SCHEDULING=true
ENABLE_RECOMMENDATIONS=true

# General AI Agent Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
OUTPUT_DIRECTORY=output
DATA_DIRECTORY=data

